extends ../layout

block content

  .container
    form.form-signin(action='/user/login', method='POST')
      h2.form-signin-heading Please sign in
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', name='email', value='',placeholder='Email address')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name='password', value='',placeholder='Password')
      .checkbox
        label
          input(type='checkbox', value='yes', name="remember_me")
          |  Remember me
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in