extends ../layout

block content


  .container
    form.form-signin(action='/user/register', method='POST')
      h2.form-signin-heading Please Register
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', name='email', value='',placeholder='Email address')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name='password', value='',placeholder='Password')
      
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Register 